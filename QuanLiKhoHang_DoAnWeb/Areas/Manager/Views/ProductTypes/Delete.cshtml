@model QuanLiKhoHang_DoAnWeb.Models.ProductTypes
@{
    ViewData["Title"] = "Delete";
}

<h1>Xoá ngành hàng</h1>
<br />
<h2 class="text-info">Bạn có thật sự muốn xoá ngành hàng này?</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="ProductTypeId" />
        <div class="form-group row">
            <div class="col-3 ">
                <label asp-for="ProductTypeName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductTypeName" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 ">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5">
                <input asp-for="Description" disabled />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.ProductTypeId" value="Xoá" />
            <a asp-action="Index" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}