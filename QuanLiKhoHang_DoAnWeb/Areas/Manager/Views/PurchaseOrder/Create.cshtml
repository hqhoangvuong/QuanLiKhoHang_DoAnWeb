@model QuanLiKhoHang_DoAnWeb.Models.ViewModels.PurchaseOrdersViewModel
@using QuanLiKhoHang_DoAnWeb.Extensions

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Tạo lệnh bán(xuất kho)</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-2">
            <label asp-for="purchaseOrder.VendorId"></label>
        </div>
        <div class="col-3">
            <select asp-for="@Model.purchaseOrder.VendorId" asp-items="Model.vendor.ToSelectListItem(Model.purchaseOrder.VendorId)" class="form-control"></select>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="purchaseOrder.Description"></label>
        </div>
        <div class="col-6">
            <input asp-for="purchaseOrder.Description" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="purchaseOrder.OrderDate"></label>
        </div>
        <div class="col-5">
            <input asp-for="purchaseOrder.OrderDate" type="datetime-local" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

