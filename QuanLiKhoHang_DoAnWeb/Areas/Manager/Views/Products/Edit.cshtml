@model QuanLiKhoHang_DoAnWeb.Models.ViewModels.ProductsViewModel
@using QuanLiKhoHang_DoAnWeb.Extensions

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Sửa thông tin sản phẩm</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="product.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="product.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="product.Name" class="form-control" />
                </div>
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="product.DefaultBuyingPrice"></label>
                </div>
                <div class="col-5">
                    <input asp-for="product.DefaultBuyingPrice" class="form-control" />
                </div>
                <span asp-validation-for="product.DefaultBuyingPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="product.DefaultSellingPrice"></label>
                </div>
                <div class="col-5">
                    <input asp-for="product.DefaultSellingPrice" class="form-control" />
                </div>
                <span asp-validation-for="product.DefaultSellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="productType"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.product.ProductTypeId" asp-items="Model.productType.ToSelectListItem(Model.product.ProductTypeId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="vendor"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.product.VendorId" asp-items="Model.vendor.ToSelectListItem(Model.product.VendorId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="product.Description"></label>
                </div>
                <div class="col-5">
                    <input asp-for="product.Description" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="product.SKU"></label>
                </div>
                <div class="col-5">
                    <input asp-for="product.SKU" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="product.Stock"></label>
                </div>
                <div class="col-5">
                    <input asp-for="product.Stock" class="form-control" />
                </div>
                <span asp-validation-for="product.Stock" class="text-danger"></span>
            </div>
        </div>
        <div class="col-1">
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

