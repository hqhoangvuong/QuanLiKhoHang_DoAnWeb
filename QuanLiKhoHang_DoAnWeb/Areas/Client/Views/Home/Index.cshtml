@model List<QuanLiKhoHang_DoAnWeb.Models.Products>

<br />

<form asp-controller="Home" asp-action="Index" method="get">
    <p>Tìm kiếm sản phẩm:</p>
    <div class="form-group row">
        <div class="col-4">
        <input class="form-control" type="text" name="SearchString">
        </div>
        <div class="col-8">
            <input type="submit" class="btn btn-success" value="Tìm kiếm" />
        </div>
    </div>
</form>

<br />
<br />

<div class="row">
    @foreach (var product in Model)
     {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px; color:steelblue;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="width: 15vw; height: 15vw;" src="@product.ProductImageUrl" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a51313"><b>@product.DefaultSellingPrice</b> VNĐ</label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@product.Id" style="color:white"> Xem chi tiết</a>
                    </div>
                </div>
            </div>
        </div>
     }
</div>
